# 电子战对抗仿真系统 - 环境变量配置示例

# 应用设置
APP_NAME=长城数字电子战对抗仿真系统
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here-change-in-production
APP_URL=http://localhost:8501

# 数据库设置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ew_simulation
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=disable

# Redis缓存
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/ew_simulation.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 仿真设置
SIMULATION_MAX_ENTITIES=1000
SIMULATION_MAX_TIME=3600
SIMULATION_DEFAULT_SPEED=1.0
SIMULATION_CACHE_SIZE=100

# 可视化设置
MAP_TILE_SERVER=https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{Z}/{Y}/{X}.jpg
MAP_DEFAULT_CENTER_LAT=39.9
MAP_DEFAULT_CENTER_LON=116.4
MAP_DEFAULT_ZOOM=8
MAP_MAX_ZOOM=18
MAP_MIN_ZOOM=2

# 安全设置
SESSION_TIMEOUT=3600
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.json,.csv,.yaml,.yml,.txt
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# 邮件设置（用于报告发送）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=support@ew-simulation.com
SMTP_TLS=true

# API密钥
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
MAPBOX_API_KEY=your-mapbox-api-key-here
WEATHER_API_KEY=your-weather-api-key-here

# 第三方服务
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# 功能开关
FEATURE_ADVANCED_ANALYSIS=true
FEATURE_3D_VISUALIZATION=true
FEATURE_REAL_TIME_SIMULATION=true
FEATURE_DATA_EXPORT=true
FEATURE_USER_AUTHENTICATION=false
FEATURE_MULTI_USER=false
FEATURE_CLOUD_SYNC=false

# 部署设置
DEPLOYMENT_MODE=standalone
CONTAINER_ORCHESTRATOR=none
LOAD_BALANCER_ENABLED=false
AUTO_SCALING_ENABLED=false
HEALTH_CHECK_ENDPOINT=/health
READINESS_CHECK_ENDPOINT=/ready
LIVENESS_CHECK_ENDPOINT=/live

# 监控设置
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=0.1
LOGGING_ENABLED=true
LOGGING_LEVEL=INFO
ALERTING_ENABLED=false
ALERTING_WEBHOOK=

# 开发设置
DEVELOPMENT_MODE=true
DEBUG_TOOLBAR=false
RELOAD_ON_CHANGE=true
PROFILE_PERFORMANCE=false
TEST_DATA_GENERATION=false
MOCK_EXTERNAL_SERVICES=true